---
import { ClientRouter } from 'astro:transitions';
import Navigation from '../components/Navigation.astro';

export interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { 
	title, 
	description = "Donut Cove Consulting - Software Development That Makes Work Delightful",
	image = "/og-image.jpg" // Default OG image
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, "https://donutcove.com");
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth antialiased">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={image} />
		
		<!-- Google Fonts: Inter & Fraunces -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,300;400;600;700;900&family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
		
		<ClientRouter />
		
		<style is:global>
			/* Soft Editorial Reset & Base */
			:root {
				--color-canvas: #FDFBF7;
				--color-ink: #292524;
				--color-accent: #D97706;
			}
			
			.dark {
				--color-canvas: #1C1917;
				--color-ink: #E7E5E4;
			}

			html {
				background-color: var(--color-canvas);
				color: var(--color-ink);
				-moz-osx-font-smoothing: grayscale;
				-webkit-font-smoothing: antialiased;
				font-smoothing: antialiased;
				text-rendering: optimizeLegibility;
			}

			body {
				background-color: var(--color-canvas);
				color: var(--color-ink);
				min-height: 100vh;
				display: flex;
				flex-direction: column;
				-moz-osx-font-smoothing: grayscale;
				-webkit-font-smoothing: antialiased;
				font-smoothing: antialiased;
				text-rendering: optimizeLegibility;
			}

			/* Custom Selection Color */
			::selection {
				background-color: var(--color-accent);
				color: white;
			}
		</style>
	</head>
	<body class="bg-canvas dark:bg-canvas-dark text-ink dark:text-ink-dark transition-colors duration-300">
		<!-- Navigation Component -->
		<Navigation />

		<!-- Content Layer -->
		<main class="flex-grow pt-24 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto w-full">
			<slot />
		</main>

		<!-- Structural Footer -->
		<footer class="border-t border-ink/10 dark:border-ink-dark/10 mt-32 py-16" transition:name="footer">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-12">
					<!-- Brand -->
					<div class="col-span-1 md:col-span-2">
						<span class="font-display font-black text-2xl tracking-tight">
							Donut Cove.
						</span>
						<p class="mt-4 text-ink-muted dark:text-ink-muted-dark max-w-md text-sm leading-relaxed">
							Software development. Human delight.<br>
							Based in Minneapolis, operating globally.
						</p>
					</div>
					
					<!-- Links -->
					<div class="space-y-4">
						<h3 class="font-mono text-xs uppercase tracking-widest text-ink-muted dark:text-ink-muted-dark">Explore</h3>
						<nav class="flex flex-col space-y-2">
							<a href="/services" class="hover:text-accent-pop transition-colors">Services</a>
							<a href="/case-studies" class="hover:text-accent-pop transition-colors">Testimonials</a>
							<a href="/about" class="hover:text-accent-pop transition-colors">About</a>
						</nav>
					</div>
					
					<!-- Contact -->
					<div class="space-y-4">
						<h3 class="font-mono text-xs uppercase tracking-widest text-ink-muted dark:text-ink-muted-dark">Connect</h3>
						<nav class="flex flex-col space-y-2">
							<a href="mailto:info@donutcove.com" class="hover:text-accent-pop transition-colors">info@donutcove.com</a>
						</nav>
					</div>
				</div>
				
				<div class="mt-16 pt-8 border-t border-ink/5 dark:border-ink-dark/5 flex justify-between items-center text-xs font-mono text-ink-muted dark:text-ink-muted-dark">
					<p>&copy; {new Date().getFullYear()} Donut Cove Consulting.</p>
					<p>EST. 2024</p>
				</div>
			</div>
		</footer>
	</body>
</html>
