  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-donut-light-pink via-donut-light-cyan to-donut-light-moss">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center space-y-8">
      <h2 class="font-display font-bold text-3xl md:text-4xl text-gray-800">
        Ready to See Similar Results?
      </h2>
      <p class="text-xl text-gray-600">
        Let's discuss how we can help transform your team's workflow and eliminate tedious tasks.
